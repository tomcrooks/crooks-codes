---
let showMenu = false;
const toggleMenu = () => {
  showMenu = !showMenu;
};
---

<header class="bg-black text-white border-b border-white">
  <nav class="container mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      <div class="text-white text-2xl font-bold">
        <a href="/" class="text-white">Crooks Codes.</a>
      </div>
      <div class="block md:hidden">
        <button onclick={toggleMenu} class="text-white focus:outline-none">
            <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                {showMenu ? 
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M18.278 16.864a1 1 0 01-1.414 1.414l-8-8a1 1 0 011.414-1.414l8 8zm-8 0a1 1 0 011.414 1.414l-8-8a1 1 0 011.414-1.414l8 8z" /> :
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M4 5h16a1 1 0 010 2H4a1 1 0 110-2zm0 6h16a1 1 0 110 2H4a1 1 0 010-2zm0 6h16a1 1 0 110 2H4a1 1 0 010-2z" />
                }
              </svg>
        </button>
      </div>
      <div class={`w-full md:flex md:items-center md:w-auto ${showMenu ? '' : 'hidden'}`}>
        <ul class="pt-4 md:flex md:items-center md:justify-between md:pt-0">
          <li>
            <a href="/experience" class="md:mx-4 py-2 text-white hover:text-gray-300">Experience</a>
          </li>
          <li>
            <a href="projects" class="md:mx-4 py-2 text-white hover:text-gray-300">Projects</a>
          </li>
          <li>
            <a href="about" class="md:mx-4 py-2 text-white hover:text-gray-300">About</a>
          </li>
          <li>
            <a href="contact" class="md:mx-4 py-2 text-white hover:text-gray-300">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
